<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/c_linksoben"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/obenlinks"
        app:layout_constraintBottom_toTopOf="@+id/c_linksunten"
        app:layout_constraintEnd_toStartOf="@+id/c_rechtsoben"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/linksobenlogo"
            android:layout_width="133dp"
            android:layout_height="155dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/booklogo" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/c_rechtsoben"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/obenrechts"
        app:layout_constraintBottom_toTopOf="@+id/c_rechtsunten"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/c_linksoben"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rechtsobenlogo"
            android:layout_width="119dp"
            android:layout_height="132dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/picturelogoneu" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/c_linksunten"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/untenlinks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/c_rechtsunten"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c_linksoben">

        <ImageView
            android:id="@+id/linksuntenlogo"
            android:layout_width="143dp"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/lesterlogoneu" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/c_rechtsunten"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/untenrechts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/c_linksunten"
        app:layout_constraintTop_toBottomOf="@+id/c_rechtsoben">

        <ImageView
            android:id="@+id/rechtsuntenlogo"
            android:layout_width="115dp"
            android:layout_height="139dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/meetings" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>